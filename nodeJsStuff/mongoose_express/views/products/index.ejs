        <% for(prod of allProd){ %>
            <li> <a href="/products/<%= prod._id %>"><%= prod.name %></a></li>
        <% } %>
    </ul>
    <a href="/products/new">Add new product</a>
    <% if(category){%>
        <br>
        <a href="/products">Go to all products</a>
        <% } %>
</body>
</html>