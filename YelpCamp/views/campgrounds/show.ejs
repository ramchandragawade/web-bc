<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= camp.image %>" class="card-img-top" alt="">
            <div class="card-body">
                <h4 class="card-title"><%= camp.title %></h4>
                <h6 class="card-text"></h6>
                <p class="card-text"><%= camp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= camp.location %></li>
                <li class="list-group-item">$<%= camp.price %>/per night</li>
            </ul>
            <div class="card-body d-flex justify-content-between">
                <a href="/campgrounds/<%= camp._id%>/edit" class="card-link btn btn-info">Edit Campground</a>
                <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete Campground</button>
                </form>    
            </div>
            <div class="card-footer text-body-secondary">
                <a href="/campgrounds" class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Go back to All campgrounds</a>
            </div>
        </div>
        <form action="/campgrounds/<%=camp._id%>/reviews" class="mb-3" method="POST">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" class="form-range" name="rating" id="rating">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Review</label>
                <textarea name="body" id="body" cols="30" rows="5" class="form-control"></textarea>                    
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>